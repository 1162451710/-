.none-tip{
	padding-top: 60rpx;
	font-size: 18px;
	color: #828282;
	text-align: center;	
}
.next-wrap{
	background-color: #fff;
}
.next-item{
	padding: 0 0 30rpx;
	
}
.next-title{
	font-size: 14px;
	color: #828282;
	background-color: #f6f6f6;
	padding: 0 30rpx;
	height: 60rpx;
	line-height: 60rpx;
}
.time{
	float: right;
	font-size: 30rpx;
}
.next-body{
	position: relative;
	padding: 30rpx 20rpx 30rpx 65rpx;
	color: #828282;
	font-size: 35rpx;
	border-bottom: 1rpx solid #f6f6f6;
}
.next-icon{
	float: left;
 
	padding-top:6rpx;
}
.next-text{
	padding-left: 50rpx;
	line-height: 1.6;
}
.next-tip{
	padding: 60rpx 30rpx;
	font-size: 22px;
	color: #404040;
	text-align: center;
}
.next-state{
	position: absolute;
	top: 55rpx;
	left: 0;
	font-size: 20rpx;
	color: #fff;
	padding: 3rpx 8rpx;
	transform: translate3d(0,-50%,0);
}
.next-state.normal{
  position: center;
  font-size: 25rpx;
	background-color: #ffb640;
}
.next-state.important{
  position: center;
  font-size: 25rpx;
	background-color: #ff8740;
}
.next-state.crash{
  position: center;
  font-size: 25rpx;
	background-color: #bc4240;
}

.next-add{
  
	width:100rpx;
  height: 100rpx;
  margin-bottom: 60rpx;

}
.next-week{
	position: fixed;
	bottom: 150rpx;
	right: 40rpx;
	width: 80rpx;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	border-radius: 100%;
	color: #fff;
	font-size: 16px;
	background-color: #39e444;
}
.next-month{
	position: fixed;
	bottom: 250rpx;
	right: 40rpx;
	width: 80rpx;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	border-radius: 100%;
	color: #fff;
	font-size: 16px;
	background-color: #33cccc;
}